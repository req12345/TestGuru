<h1 class="display-3"><%= t('.header') %></h1>

<table class="table table-hover">
  <tr class="table-primary">
    <th scope="col" class="sort-by-title pointer text-center">
      <%= t('.title') %>
      <%= octicon 'arrow-up', class: 'text-success hide' %>
      <%= octicon 'arrow-down', class: 'text-success hide' %>
    </th>
    <th scope="col" class="text-center"><%= t('.level') %></th>
    <th scope="col" class="text-center"><%= t('.category') %></th>
    <th scope="col" class="text-center"><%= t('.questions') %></th>
    <th scope="col" class="text-center"><%= t('.author') %></th>
    <th scope="col" class="text-center"><%= t('.actions') %></th>
  </tr>

  <%= render @tests  %>
</table>
