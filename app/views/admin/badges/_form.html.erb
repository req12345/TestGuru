<h2><%= badge_header(@badge) %></h2>

<%= form_with model: [:admin, @badge], local: true do |form| %>
<%= render 'shared/errors', resource:  @badge %>
  <p>
    <%= form.label :title, t('.title') %>
    <%= form.text_field :title, id: :badge_title, class: 'form-control' %>
  </p>
  <p>
    <%= form.label :image_url, t('.img_url') %>
    <%= form.text_field :image_url, id: :badge_image_url, class: 'form-control' %>
  </p>
  <p>
    <%= form.label :rule, t('.rule') %>
    <%= form.select :rule, Badge::BADGES_RULES, {prompt: true}, class: 'form-select' %>
  </p>
  <br>
  <p>
    <%= form.label :parameter, t('.parameter') %>
    <%= form.text_field :parameter, id: :badge_parameter, class: 'form-control' %>
  </p>
  <p><%= form.submit %></p>
<% end %>
