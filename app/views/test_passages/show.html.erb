<h1><%= t('.passing', test_title: @test_passage.test.title) %> </h1>
<h3><%= t('.total_questions', questions_count: @test_passage.test.questions.size) %></h3>

<h3><%= t('.current_question', number: @test_passage.current_question_number) %></h3>
<b>
  <%= @test_passage.current_question.body %>
</b>

<%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form| %>
  <%= form.collection_check_boxes :answers_ids, @test_passage.current_question.answers, :id, :body, include_hidden: false do |b| %>
    <p>
      <%= b.check_box id: "answer_ids_#{b.object.id}" %>
      <%= b.label %>
    </p>
  <% end %>

  <p><%= form.submit t('shared.button.next') %></p>
<% end %>
