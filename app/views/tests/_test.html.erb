<tr>
  <td><strong><%= test.title %></strong></td>
  <td><%= test_level(test) %></td>
  <td><strong><%= test.category.title %></strong></td>
  <td><strong><%= test.questions.size %></strong></td>
  <td><strong><%= test.author.name %></strong></td>
  <td><%= link_to 'Show', test_path(test) %></td>
  <td><%= link_to 'Edit', edit_test_path(test) %></td>
  <td><%= link_to 'New question', new_test_question_path(test) %></td>
  <td><%= link_to 'Delete',
                   test_path(test),
                   method: :delete,
                   data: { confirm: 'Are you sure?' }%>
  </td>
</tr>
