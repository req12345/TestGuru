<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <div class="nav user">
        <%= t('shared.nav.welcome') %><b><%= current_user.first_name %></b><%= t('shared.nav.guru') %>
      </div>

      <div class="nav user">
        <%= link_to t('shared.links.log_out'), destroy_user_session_path, method: :delete %>
      </div>
    <% end %>
    <%= render 'shared/flash' %>
    <%= render 'shared/nav' %>
      <%= yield %>
    <%= render 'shared/footer' %>
  </body>
</html>
